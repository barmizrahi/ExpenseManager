<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllFragments.InfoLogInFragment"
    android:background="@drawable/bg4"
    tools:layout_editor_absoluteY="81dp">


    <ImageButton
        android:id="@+id/back_info"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="385dp"
        android:layout_height="672dp"
        android:paddingTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/back_info"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="19dp">


        <TextView
            android:id="@+id/Tv_info"
            android:layout_width="345dp"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/infoLogIn"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/back_info"
            app:layout_constraintEnd_toEndOf="@id/back_info"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toStartOf="@id/back_info"
            app:layout_constraintVertical_bias="1.0" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>